%%   /-----------\
%% --+-- setup --+-- %% -------------------------------------------------------
%%   \-----------/


%% ----- load key-val stuff

\RequirePackage{kvoptions-patch}        % patch key-val options (allow lists)
\RequirePackage{xkeyval}                % key-value options

%% ----- declare options

% load tikz
\define@boolkey{eistaadrawing.sty}[eistaadrawing@]{tikz}[true]{}

% xcolor options
\define@cmdkey{eistaadrawing.sty}[eistaadrawing@]{xcolor}{}

% tikz libraries
\define@cmdkey{eistaadrawing.sty}[eistaadrawing@]{tikzlibs}{}

% fallback
\DeclareOptionX*{%
    \ClassWarning{eistaadrawing}{Unknown option '\CurrentOption'}
}

%% ----- set defaults

\setkeys{eistaadrawing.sty}{%
    tikz=false,%
    xcolor={usenames,dvipsnames,svgnames,table},%
    tikzlibs={arrows,shapes,backgrounds}%
}

%% ----- process given options

\ProcessOptionsX*

%% ----- actions on options

\PassOptionsToPackage{\eistaadrawing@xcolor}{xcolor}

%%   /--------------\
%% --+-- packages --+-- %% ----------------------------------------------------
%%   \--------------/


\RequirePackage{xcolor}                 % colors!!!


%%   /----------------\
%% --+-- tikz setup --+-- %% --------------------------------------------------
%%   \----------------/


\ifeistaadrawing@tikz
    \RequirePackage{tikz}                   % TikZ

    % load tikz libraries
    \usetikzlibrary{\eistaadrawing@tikzlibs}
\fi

