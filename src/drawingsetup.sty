\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{drawingsetup}[2014/08/22, My personal drawing setup]


%%   /-----------\
%% --+-- setup --+-- %% -------------------------------------------------------
%%   \-----------/


\RequirePackage{kvoptions}              % key-value options

\SetupKeyvalOptions{%
    family=drawingsetup,%
    prefix=drawingsetup@%
}

%% ----- declare options

% load tikz
\DeclareBoolOption[false]{tikz}

% xcolor options
\DeclareStringOption[{usenames,dvipsnames,svgnames,table}]{xcolor}[]

% tikz libraries
\DeclareStringOption[{arrows,shapes,backgrounds}]{tikzlibs}[]

% fallback
\DeclareDefaultOption{%
    \@unknownoptionerror
}

%% ----- process given options

\ProcessKeyvalOptions*

%% ----- actions on options

\PassOptionsToPackage{\drawingsetup@xcolor}{xcolor}


%%   /--------------\
%% --+-- packages --+-- %% ----------------------------------------------------
%%   \--------------/


\RequirePackage{xcolor}                 % colors!!!


%%   /----------------\
%% --+-- tikz setup --+-- %% --------------------------------------------------
%%   \----------------/


\ifdrawingsetup@tikz
    \RequirePackage{tikz}                   % TikZ

    % load tikz libraries
    \usetikzlibrary{\drawingsetup@tikzlibs}
\fi

